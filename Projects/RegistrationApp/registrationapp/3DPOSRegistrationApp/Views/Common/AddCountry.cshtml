@model _3DPOSRegistrationApp.Utility.CommonModel.CountryModel

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">

    <h3 class="heading">Add Country</h3>
    <div class="div">
        <form asp-action="AddCountry">
            <div asp-validation-summary="All" class="text-danger"></div>

            <label for="CountryName">CountryName</label>
            <input id="CountryName" name="CountryName" type="text" asp-for="CountryName" class="textBox validate"  />
            <span asp-validation-for="CountryName" class="text-danger"></span>

            <input class="submit-button" type="submit" value="Save">
        </form>
    </div>

</div>


