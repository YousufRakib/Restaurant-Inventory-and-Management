@model _3DPOSRegistrationApp.Utility.UserModel_View.LoginViewModel
@{
    //ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-danger {
        color: red;
    }
</style>

<div class="container">
    <div class="card center-align rounded credentialCard">
        <div class="card-content">
            <div class="row">
                <div class="col s12 l5 m5">
                    <img src="~/HomeTemp/img/signin.svg"
                         alt="signinimg"
                         class="responsive-img" />
                </div>
                <div class="col s12 l7 m7">
                    <h5 class="subTitle">Welcome back!</h5>
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-field col s12">
                            <input id="Email" class="validate" type="email" asp-for="Email" required />
                            <label for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="input-field col s12">
                            <input id="Password" class="validate" type="password" asp-for="Password" required />
                            <label for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>


                        <div class="center-align">
                            <button class="waves-effect btn blue darken-3 btnRounded">Login</button>
                        </div>
                    </form>
                    <div class="container signin">
                        <p>Didn't have an account? <a asp-area="" asp-controller="User" asp-action="Registration">Sign Up</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

