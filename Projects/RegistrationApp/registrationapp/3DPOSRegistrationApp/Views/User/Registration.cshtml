@model _3DPOSRegistrationApp.Utility.UserModel_View.RegistrationViewModel
@*@using Microsoft.AspNetCore.Identity*@
@{
    //ViewData["Title"] = "Register";
    //var roles = (List<IdentityRole>)ViewData["roles"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-danger {
        color: red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="card center-align rounded credentialCard">
            <div class="card-content">
                <div class="row">
                    <div class="col s12 l5 m5">
                        <img src="~/HomeTemp/img/register.svg"
                             alt="registerimg"
                             class="responsive-img register-img" />
                    </div>
                    <div class="col s12 l7 m7">
                        <h5 class="center-align subTitle">
                            Add User
                        </h5>
                        <form asp-action="Registration" >
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                            <div class="input-field col s12">
                                <input id="FullName" name="FullName" type="text" asp-for="FullName" class="validate" required />
                                <label for="FullName">Full Name</label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="input-field col s12">
                                <input id="Email" name="Email" type="email" asp-for="Email" class="validate" required />
                                <label for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="input-field col s12">
                                <input id="Password" name="Password" type="password" asp-for="Password" minlength="1" data-rule-password="true" class="validate" required />
                                <label for="Password">Password</label>
                                <span class="helper-text" data-error="At least 6 characters" data-success="Valid"></span>                               
                            </div>

                            <div class="input-field col s12">
                                <input id="confirmPassword" name="confirmPassword" type="password" data-rule-password="true" data-rule-equalTo="#Password" class="validate" required />
                                <label for="confirmPassword">Confirm Password</label>
                                <span class="helper-text" data-error="Password not match" data-success="Password match"></span>
                            </div>

                            <!--<div class="input-field col s12">-->
                                @*@Html.DropDownList("UserRole", (IEnumerable<SelectListItem>)ViewBag.Roles, "--Select Role--", new { @class = "form-control" })*@
                                @*<select asp-for="UserRole" class="form-control" asp-items='new SelectList(ViewBag.Roles,"Id","Name")'></select>*@
                            <!--</div>-->

                            <div class="center-align">
                                <button type="submit" class="waves-effect btn blue darken-3 btnRounded">Save</button>
                            </div>
                        </form>
                        <div class="container signin">
                            <p>Already have an account? <a asp-area="" asp-controller="User" asp-action="Login">Sign in</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
