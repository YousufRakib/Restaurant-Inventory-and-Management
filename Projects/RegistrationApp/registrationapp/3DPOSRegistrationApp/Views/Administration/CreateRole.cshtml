@model _3DPOSRegistrationApp.Utility.UserRoleModel.RoleViewModel
@{
    ViewBag.Title = "Create New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-danger {
        color: red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="card center-align rounded credentialCard">
            <div class="card-content">
                <div class="row">
                    <div class="col s12 l5 m5">
                        <img src="~/HomeTemp/img/register.svg"
                             alt="registerimg"
                             class="responsive-img register-img" />
                    </div>
                    <div class="col s12 l7 m7">
                        <h5 class="center-align subTitle">
                            Add User Role
                        </h5>
                        <form asp-action="CreateRole" id="registrationForm">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                            <div class="input-field col s12">
                                <input id="RoleName" name="RoleName" type="text" asp-for="RoleName" class="validate" required />
                                <label for="RoleName">RoleName</label>
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>

                            <div class="center-align">
                                <button type="submit" class="waves-effect btn blue darken-3 btnRounded">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
