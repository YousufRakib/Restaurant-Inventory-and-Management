@model _3dposManagaement.Utility.MenuModel.MenuMargeViewModel
@using CommonEntityModel.ModelClass;

@{
    ViewData["Title"] = "Menu list page";
    SearchBarAndPager searchBarAndPager = new SearchBarAndPager();
    int pageNo = 0;
    var loggedInUserId = ViewBag.loggedInUserID;
    if (ViewBag.searchBar_Pager != null)
    {
        searchBarAndPager = ViewBag.searchBar_Pager;
        pageNo = searchBarAndPager.CurrentPage;
    }
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h6>@ViewBag.Path</h6>
<br />

<div class="card mb-4">
    <div class="card-body">
        <h3>@ViewBag.Message</h3><br />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="table-responsive">
            <a href="#" class="btn btn-info" onclick="AddNewMenu(0)">Add Menu</a> <br /><br />
            @*<a class="btn btn-sm btn-info" style="height:32px; margin-top:-3px;margin-left:0px;width:139px" asp-area="" asp-controller="Inventory" asp-action="AddProduct">
                    Add Menu
                </a>*@
            <partial name="_SearchBar" model="@searchBarAndPager" />

            <table class="table table-bordered" width="100%" cellspacing="0">
                <!-- id=dataTable -->
                <thead>
                    <tr>
                        <th>
                            Menu Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Last Modified on
                        </th>
                        <th>
                            Created On
                        </th>
                        <th>
                            Created by
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.menuList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MenuName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MenuDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedByName)
                            </td>
                            <td>
                                @if (item.Status == true)
                                {
                                    var status = 1;
                                    <label class="statusSwitch">
                                        <input type="checkbox" onclick='UpdateStatus(@item.MenuId,@status)' checked>
                                        <span class="statusSlider round"></span>
                                    </label>
                                }
                                else
                                {
                                    var status = 0;
                                    <label class="statusSwitch">
                                        <input type="checkbox" onclick='UpdateStatus(@item.MenuId,@status)'>
                                        <span class="statusSlider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                <a href="#">
                                    <a class="btn btn-secondary btn-sm" onclick='EditMenuRecord(@item.MenuId)'><span class="fas fa-edit"></span></a>
                                    <a class="btn btn-danger btn-sm" onclick='DeleteMenuRecord(@item.MenuId)'><span class="fas fa-trash"></span></a>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Paging" model="@searchBarAndPager" />
        </div>
    </div>
</div>

<div class="modal fade" id="SaveModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="SaveModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="saveForm">
                    <fieldset id="SubmitForm">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">Menu Name</div>
                                        <div class="col-md-7">@Html.TextBoxFor(m => m.MenuName, new { @id = "MenuName", @class = "form-control" })</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">Description</div>
                                        <div class="col-md-7">@Html.TextAreaFor(m => m.MenuDescription, new { @id = "MenuDescription", style = "height:86px", @class = "form-control" })</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="cursor: pointer;" placeholder="Select Image">
                                        <img id="saveImgPreview" height="140" width="140" />
                                        <input type="file" name="MenuImageFile" id="saveMenuImageFile" style="display:none" onchange="readSaveImageURL(this);" />
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <a href="#" class="btn btn-block btn-danger" id="SaveMenuRecord">Save</a>
                                </div>
                            </div>
                        </div>
                        <!--<div class="form-group">
                            @*@Html.DropDownListFor(m => m.DepartmentId, ViewBag.ListOfDepartment as SelectList, "--Select Dept--", new { @id = "DropDwn", @class = "form-control" })*@
                        </div>-->

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="EditModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="EditModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <fieldset id="UpdatedSubmitForm">
                        @Html.HiddenFor(m => m.MenuId, new { @id = "EditMenuId" })

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">Menu Name</div>
                                        <div class="col-md-7">@Html.TextBoxFor(m => m.MenuName, new { @id = "EditMenuName", @class = "form-control" })</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">Description</div>
                                        <div class="col-md-7">@Html.TextBoxFor(m => m.MenuDescription, new { @id = "EditMenuDescription", @class = "form-control" })</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="cursor: pointer;" placeholder="Select Image">
                                        <img src="" id="editImgPreview" height="140" width="140" />
                                        <input type="file" name="MenuImageFile" id="editMenuImageFile" style="display:none" onchange="readEditImageURL(this);" />
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <a href="#" class="btn btn-block btn-danger" id="UpdateMenuRecord">Update</a>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Delete Menu</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <input type="text" id="menuid" hidden />
                <h4 style="text-align: center;">Do you want to delete this ?</h4>
                <br />
                <div>
                    <h6 style="font-weight: bold; text-align: center;"> Yes</h6>
                </div>
                <div>
                    <h6 style="text-align: center;">Verify Code</h6>
                </div>

                <input type="text" class="code-button" id="code1" style=" width: 18px; border-top: none; border-left: none; border-right: none;margin-left:41%" />
                <input type="text" class="code-button" id="code2" style=" width: 18px; border-top: none; border-left: none; border-right: none;" />
                <input type="text" class="code-button" id="code3" style=" width: 18px; border-top: none; border-left: none; border-right: none;" />
                <input type="text" class="code-button" id="code4" style=" width: 18px; border-top: none; border-left: none; border-right: none;" />
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Cancle</a>
                <a href="#" class="btn btn-danger" id="confirmButton" onclick="ConfirmDelete()" style="margin-right:32%">Confirm</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="StatusConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Change Status</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <input type="text" id="statusMenuId" hidden />
                <h4 style="text-align: center;">Are you sure, You want to <input style="width: 19%; border: none; font-size: 1.5rem; font-weight: 500; margin-right: -2px; text-align: center; " type="text" id="status" /> this?</h4>

                <br />

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" onclick="CloseModal()" id="closeModal">Cancle</a>
                <a href="#" class="btn btn-danger" id="confirmStatusButton" onclick="ConfirmStatus()" style="margin-right:32%">Confirm</a>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>

        $("#code1").keyup(function () {
            document.getElementById("code2").focus();
        });
        $("#code2").keyup(function () {
            document.getElementById("code3").focus();
        });
        $("#code3").keyup(function () {
            document.getElementById("code4").focus();
        });
        $("#code4").keyup(function () {
            document.getElementById("confirmButton").focus();
        });

        function readSaveImageURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#saveImgPreview')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(150);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        function readEditImageURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#editImgPreview')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(150);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        function AddNewMenu(menuId) {
            $("#saveForm")[0].reset();
            $("#SaveModalTitle").html("Add Menu");
            $("#SaveModal").modal();

        }

        function EditMenuRecord(menuId) {
            $("#editForm")[0].reset();
            $("#EditMenuId").val(0);
            $("#EditModalTitle").html("Edit Menu");

            $("#EditModal").modal();

            var url = "/MainMenu/GetMenuById?menuId=" + menuId;

            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    var obj = JSON.parse(data);
                    $("#EditMenuId").val(obj.MenuId);
                    $("#EditMenuName").val(obj.MenuName);
                    $("#EditMenuDescription").val(obj.MenuDescription);
                }
            })

            setTimeout(function () {
                var imgUrl = "@Url.Action("GetMenuImage", "MainMenu")?menuId=" + menuId;
                $("#editImgPreview").attr("src", imgUrl);
			}, 50);


        }

        $("#SaveMenuRecord").click(function () {
            var data = new FormData();

            var files = $("#saveMenuImageFile").get(0).files;
            if (files.length > 0) {
                data.append("MenuImageFile", files[0]);
            }

            var MenuName = $('#MenuName').val();
            var MenuDescription = $('#MenuDescription').val();

            var dataModel = {
                MenuName: MenuName,
                MenuDescription: MenuDescription
            }

            data.append('dataModel', JSON.stringify(dataModel));
            /*var model2 = $("#SubmitForm").serialize();*/

            $.ajax({
                type: "Post",
                url: "/MainMenu/SaveMenu",
                data: data,
                //dataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Data Saved Successfully!");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#SaveModal").modal("hide");
                    }
                    else {
                        alert("Exception");
                        //window.location.href = "/MainMenu/MainMenuList";
                        //$("#SaveModal").modal("hide");
                    }
                }
            })
        });

        $("#UpdateMenuRecord").click(function () {
            var data = new FormData();

            var files = $("#editMenuImageFile").get(0).files;
            if (files.length > 0) {
                data.append("MenuImageFile", files[0]);
            }

            var MenuId = $('#EditMenuId').val();
            var MenuName = $('#EditMenuName').val();
            var MenuDescription = $('#EditMenuDescription').val();

            var dataModel = {
                MenuId:MenuId,
                MenuName: MenuName,
                MenuDescription: MenuDescription
            }

            data.append('dataModel', JSON.stringify(dataModel));

            $.ajax({
                type: "Post",
                url: "/MainMenu/EditMenu",
                data: data,
                //dataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Data Updated Successfully!");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#EditModal").modal("hide");
                    }
                    else {
                        alert("Exception");
                        //window.location.href = "/MainMenu/MainMenuList";
                        //$("#EditModal").modal("hide");
                    }
                }
            })
        });

        var UpdateStatus = function (menuId, status) {
            if (status == 1) {
                $("#status").val("Inactive");
            }
            else {
                $("#status").val("Active");
            }
            $("#statusMenuId").val(menuId);
            $("#StatusConfirmation").modal("show");
        }

        var ConfirmStatus = function () {
            var menuId = $("#statusMenuId").val();

            $.ajax({
                type: "POST",
                url: "/MainMenu/ChangeMenuStatus?menuId=" + menuId,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Changed!..");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#StatusConfirmation").modal("hide");
                    }
                    else {
                        alert("Exception");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#StatusConfirmation").modal("hide");
                    }
                }
            })
        }

        var CloseModal = function () {
            window.location.href = "/MainMenu/MainMenuList";
            $("#StatusConfirmation").modal("hide");
        }

        var DeleteMenuRecord = function (menuId) {
            $("#menuid").val(menuId);
            $("#DeleteConfirmation").modal("show");
        }

        var ConfirmDelete = function () {
            var code = $("#code1").val() + $("#code2").val() + $("#code3").val() + $("#code4").val();
            var menuId = $("#menuid").val();

            $.ajax({
                type: "POST",
                url: "/MainMenu/DeleteMenuRecord?menuId=" + menuId+"&code="+code,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Deleted!..");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#DeleteConfirmation").modal("hide");
                        $(".row_" + menuId).remove();
                    }
                    else if (data.output === "insuccess") {
                        alert("Code not match");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#DeleteConfirmation").modal("hide");
                    }
                    else if (data.output === "error"){
                        alert("Exception");
                        window.location.href = "/MainMenu/MainMenuList";
                        $("#DeleteConfirmation").modal("hide");
                    }
                }
            })
        }

    </script>
}