@model _3dposManagaement.Utility.MenuModel.ItemMargeViewModel
@using CommonEntityModel.ModelClass;

@{
    ViewData["Title"] = "Item list page";
    SearchBarAndPager searchBarAndPager = new SearchBarAndPager();
    int pageNo = 0;
    var loggedInUserId = ViewBag.loggedInUserID;
    if (ViewBag.searchBar_Pager != null)
    {
        searchBarAndPager = ViewBag.searchBar_Pager;
        pageNo = searchBarAndPager.CurrentPage;
    }
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h6>@ViewBag.Path</h6>
<br />

<div class="card mb-4">
    <div class="card-body">
        <h3>@ViewBag.Message</h3><br />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="table-responsive">
            <a href="#" class="btn btn-info" onclick="AddNewItem(0)">Add Item</a> <br /><br />
            @*<a class="btn btn-sm btn-info" style="height:32px; margin-top:-3px;margin-left:0px;width:139px" asp-area="" asp-controller="Inventory" asp-action="AddProduct">
                    Add Menu
                </a>*@
            <partial name="_SearchBar" model="@searchBarAndPager" />

            <table class="table table-bordered" width="100%" cellspacing="0">
                <!-- id=dataTable -->
                <thead>
                    <tr>
                        <th>
                            Items Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Menu
                        </th>
                        <th>
                            Variant
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemListModels)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categories)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Menus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VariantMasterName)
                                @if (Model.ItemListModels != null)
                                {
                                    @foreach (var variantName in item.VariantAndPriceModel)
                                    {
                                        <table class="table table-bordered" width="100%" style="border: none; margin-bottom: 10px; margin-top: 5px;" cellspacing="0">
                                            <tr style="border:none">
                                                <td style="border: none; padding: 0px;">
                                                    @Html.DisplayFor(modelItem => variantName.VariantName)
                                                </td>
                                            </tr>
                                        </table>
                                    }
                                }
                            </td>
                            <td>
                                @if (Model.ItemListModels != null)
                                {
                                    <br />
                                    @foreach (var variantPrice in item.VariantAndPriceModel)
                                    {
                                        <table class="table table-bordered" width="100%" style="border:none;margin-bottom:10px;margin-top:5px;" cellspacing="0">
                                            <tr style="border:none">
                                                <td style="border:none;padding:0px;">
                                                    @Html.DisplayFor(modelItem => variantPrice.VariantWiseItemprice)
                                                </td>
                                            </tr>
                                        </table>
                                    }
                                }
                            </td>
                            <td>
                                @if (item.Status == true)
                                {
                                    var status = 1;
                                    <label class="statusSwitch">
                                        <input type="checkbox" onclick='UpdateStatus(@item.ItemId,@status)' checked>
                                        <span class="statusSlider round"></span>
                                    </label>
                                }
                                else
                                {
                                    var status = 0;
                                    <label class="statusSwitch">
                                        <input type="checkbox" onclick='UpdateStatus(@item.ItemId,@status)'>
                                        <span class="statusSlider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                <a href="#">
                                    <a class="btn btn-secondary btn-sm" onclick='EditItemRecord(@item.ItemId)'><span class="fas fa-edit"></span></a>
                                    <a class="btn btn-danger btn-sm" onclick='DeleteItemRecord(@item.ItemId)'><span class="fas fa-trash"></span></a>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Paging" model="@searchBarAndPager" />
        </div>
    </div>
</div>

