@section scripts
{
    <script>

        $("#code1").keyup(function () {
            document.getElementById("code2").focus();
        });
        $("#code2").keyup(function () {
            document.getElementById("code3").focus();
        });
        $("#code3").keyup(function () {
            document.getElementById("code4").focus();
        });
        $("#code4").keyup(function () {
            document.getElementById("confirmButton").focus();
        });

        function readSaveImageURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#saveImgPreview')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(150);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        function readEditImageURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#editImgPreview')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(150);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        $('#SaveVariantMasterDropdown').on('change', function () {
            var variantMasterId = $("#SaveVariantMasterDropdown option:selected").val();

            if (variantMasterId == null || variantMasterId=="") {
                var table = document.getElementById("VariantListTable");
                var rowCount = table.rows.length;
                for (var i = rowCount - 1; i >= 0; i--) {
                    table.deleteRow(i);
                }

                var SetData = $("#VariantList");
                for (var i = 0; i < 1; i++) {
                    var Data =
                        "<tr class='row_" + i + "'>" +
                        "<td style='display: none;'></td>" +
                        "<td>None</td>" +
                        "<td> <p style='margin-bottom:0px'>Price</p> <input type='text' id='" + i + "'/></td>" +
                        "</tr>";
                    SetData.append(Data);
                }
            }
            else {
                $.get("/MainMenu/GetVariantList?variantMasterId=" + variantMasterId, null, SaveVariantBind);
            }

        });

        function SaveVariantBind(variantList) {

            var table = document.getElementById("VariantListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }

            var SetData = $("#VariantList");
            for (var i = 0; i < variantList.length; i++) {
                var Data =
                    "<tr class='row_" + variantList[i].variantId + "'>" +
                        "<td style='display: none;'>" + variantList[i].variantId + "</td>" +
                        "<td> " + variantList[i].variantName + "</td>" +
                        "<td> <p style='margin-bottom:0px'>Price</p> <input type='text' id='"+i+"'/></td>" +
                    "</tr>";
                SetData.append(Data);
            }
        }

        $('#EditVariantMasterDropdown').on('change', function () {
            var variantMasterId = $("#EditVariantMasterDropdown option:selected").val();
            var itemId = $("#EditItemId").val();
            alert(itemId);
            if (editVariantMasterId == variantMasterId) {
                $.get("/MainMenu/GetVariantListWithPrice?variantMasterId=" + variantMasterId + "&itemId=" + itemId, null, EditVariantBind);
            }
            else {
                $.get("/MainMenu/GetVariantList?variantMasterId=" + variantMasterId, null, EditVariantBind);
            }
        });

        function EditVariantBind(variantList) {
            var table = document.getElementById("editVariantListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }

            var SetData = $("#editVariantList");
            for (var i = 0; i < variantList.length; i++) {
                var Data =
                    "<tr class='row_" + variantList[i].variantId + "'>" +
                        "<td style='display: none;'>" + variantList[i].variantId + "</td>" +
                        "<td>" + variantList[i].variantName + "</td>" +
                        "<td> <input type='text' id='" + i + "' value='"+variantList[i].variantWiseItemprice+"'/></td>" +
                    "</tr>";
                SetData.append(Data);
            }
        }

        function AddNewItem(itemId) {
            $("#saveForm")[0].reset();
            $("#ItemId").val(0);
            $("#SaveVariantMasterDropdown option:selected").text("--Select Variant--");
            $("#SaveModalTitle").html("Add Item");
            $("#SaveModal").modal();

            $.get("/MainMenu/GetMenuListForItem?itemId="+0, null, MenuBind);
            $.get("/MainMenu/GetItemCategoryListForItem?itemId="+0, null, CategoryBind);

            EmptyVariantBind(0);
        }

        function EmptyVariantBind(variantId) {

            var table = document.getElementById("VariantListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }

            var SetData = $("#VariantList");
            for (var i = 0; i < 1; i++) {
                var Data =
                    "<tr class='row_" + i + "'>" +
                    "<td style='display: none;'></td>" +
                    "<td>None</td>" +
                    "<td> <p style='margin-bottom:0px'>Price</p> <input type='text' id='" + i + "'/></td>" +
                    "</tr>";
                SetData.append(Data);
            }
        }

        function MenuBind(menuList) {
            var table = document.getElementById("MenuListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }

            var SetData = $("#MenuList");
            for (var i = 0; i < menuList.length; i++) {
                var Data =
                    "<tr class='row_" + menuList[i].menuId + "'>" +
                    "<td> <input type='checkbox'/></td>" +
                    "<td style='display: none;'>" + menuList[i].menuId + "</td>" +
                    "<td>" + menuList[i].menuName + "</td>" +
                    "</tr>";
                SetData.append(Data);
            }
        }

        function CategoryBind(categoryList) {
            var table = document.getElementById("CategoryListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }

            var SetData = $("#CategoryList");
            for (var i = 0; i < categoryList.length; i++) {
                var Data =
                    "<tr class='row_" + categoryList[i].categoryId + "'>" +
                    "<td> <input type='checkbox'/></td>" +
                    "<td style='display: none;'>" + categoryList[i].categoryId + "</td>" +
                    "<td>" + categoryList[i].categoryName + "</td>" +
                    "</tr>";
                SetData.append(Data);
            }
        }
        var editVariantMasterId = 0;
        function EditItemRecord(itemId) {
            $("#editForm")[0].reset();
            $("#EditItemId").val(0);
            $("#EditModalTitle").html("Edit Item");
            $("#EditModal").modal();

            var url = "/MainMenu/GetItemById?itemId=" + itemId;

            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    var obj = JSON.parse(data);
                    console.log(obj);
                    $("#EditItemId").val(obj.ItemId);
                    $("#EditItemName").val(obj.ItemName);
                    $("#EditItemDescription").val(obj.ItemDescription);
                    $("#EditVariantMasterDropdown option:selected").text(obj.VariantMaster.VariantMasterName);
                    $("#EditVariantMasterDropdown option:selected").val(obj.VariantMasterId);

                    var variantMasterId = $("#EditVariantMasterDropdown option:selected").val();
                    editVariantMasterId = variantMasterId;
               
                    $.get("/MainMenu/GetVariantListWithPrice?variantMasterId=" + variantMasterId + "&itemId=" + itemId, null, EditVariantBind);
                }
            })

            $.get("/MainMenu/GetMenuListForItem?itemId=" + itemId, null, EditMenuBind);
            $.get("/MainMenu/GetItemCategoryListForItem?itemId=" + itemId, null, EditCategoryBind);

            setTimeout(function () {
                var imgUrl = "@Url.Action("GetItemImage", "MainMenu")?itemId=" + itemId;
                $("#editImgPreview").attr("src", imgUrl);
			}, 50);
        }

        function EditMenuBind(menuList) {
            var table = document.getElementById("editMenuListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }

            var SetData = $("#editMenuList");
            for (var i = 0; i < menuList.length; i++) {

                if (menuList[i].isCheckedMenu == true) {
                    var Data =
                        "<tr class='row_" + menuList[i].menuId + "'>" +
                        "<td> <input type='checkbox' checked/></td>" +
                        "<td style='display: none;'>" + menuList[i].menuId + "</td>" +
                        "<td>" + menuList[i].menuName + "</td>" +
                        "</tr>";
                    SetData.append(Data);
                }
                else {
                    var Data =
                        "<tr class='row_" + menuList[i].menuId + "'>" +
                        "<td> <input type='checkbox'/></td>" +
                        "<td style='display: none;'>" + menuList[i].menuId + "</td>" +
                        "<td>" + menuList[i].menuName + "</td>" +
                        "</tr>";
                    SetData.append(Data);
                }
            }
        }

        function EditCategoryBind(categoryList) {
            var table = document.getElementById("editCategoryListTable");
            var rowCount = table.rows.length;
            for (var i = rowCount - 1; i >= 0; i--) {
                table.deleteRow(i);
            }


            var SetData = $("#editCategoryList");
            for (var i = 0; i < categoryList.length; i++) {

                if (categoryList[i].isCheckedCategory == true) {
                    var Data =
                        "<tr class='row_" + categoryList[i].categoryId + "'>" +
                            "<td> <input type='checkbox' checked/></td>" +
                            "<td style='display: none;'>" + categoryList[i].categoryId + "</td>" +
                            "<td>" + categoryList[i].categoryName + "</td>" +
                        "</tr>";
                    SetData.append(Data);
                }
                else {
                    var Data =
                        "<tr class='row_" + categoryList[i].categoryId + "'>" +
                            "<td> <input type='checkbox'/></td>" +
                            "<td style='display: none;'>" + categoryList[i].categoryId + "</td>" +
                            "<td>" + categoryList[i].categoryName + "</td>" +
                        "</tr>";
                    SetData.append(Data);
                }
            }
        }


        $("#SaveItem").click(function () {

            /////Start store menu data
            var menuListModel = [];
            var grid = document.getElementById("MenuListTable");

            var checkBoxes = grid.getElementsByTagName("input");

            for (var i = 0; i < checkBoxes.length; i++) {
                if (checkBoxes[i].checked) {
                    var row = checkBoxes[i].parentNode.parentNode;
                    var ItemWithMenuList = {
                        MenuId: row.cells[1].innerHTML,
                        MenuName: row.cells[2].innerHTML
                    };
                    menuListModel.push(ItemWithMenuList);
                }
            }
            /////End store menu data

            /////Start store category data
