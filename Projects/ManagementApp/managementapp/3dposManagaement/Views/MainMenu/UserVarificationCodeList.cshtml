            $.ajax({
                type: "Post",
                url: "/MainMenu/EditUserVarificationCode",
                data: data,
                //dataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Data Updated Successfully!");
                        window.location.href = "/MainMenu/UserVarificationCodeList";
                        $("#EditModal").modal("hide");
                    }
                    else {
                        alert("Exception");
                        //window.location.href = "/MainMenu/MainMenuList";
                        //$("#EditModal").modal("hide");
                    }
                }
            })
        });

        var DeleteVerificationCodeRecord = function (id) {
            $("#id").val(id);
            $("#DeleteConfirmation").modal("show");
        }

