@model _3dposManagaement.Utility.MenuModel.ItemCategoryMargeViewModel
@using CommonEntityModel.ModelClass;

@{
    ViewData["Title"] = "ItemCategory list page";
    SearchBarAndPager searchBarAndPager = new SearchBarAndPager();
    int pageNo = 0;
    var loggedInUserId = ViewBag.loggedInUserID;
    if (ViewBag.searchBar_Pager != null)
    {
        searchBarAndPager = ViewBag.searchBar_Pager;
        pageNo = searchBarAndPager.CurrentPage;
    }
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h6>@ViewBag.Path</h6>
<br />

<div class="card mb-4">
    <div class="card-body">
        <h3>@ViewBag.Message</h3><br />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="table-responsive">
            <a href="#" class="btn btn-info" onclick="AddNewItemCategory(0)">Add Category</a> <br /><br />
            @*<a class="btn btn-sm btn-info" style="height:32px; margin-top:-3px;margin-left:0px;width:139px" asp-area="" asp-controller="Inventory" asp-action="AddProduct">
                    Add Menu
                </a>*@
            <partial name="_SearchBar" model="@searchBarAndPager" />

            <table class="table table-bordered" width="100%" cellspacing="0">
                <!-- id=dataTable -->
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Description
                        </th>
                        @*<th>
                                Emoji/Icon
                            </th>*@
                        <th>
                            Assigned Menu
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemCategoryList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Menus)
                            </td>
                            <td>
                                @if (item.Status == true)
                                {
                                    var status = 1;
                                    <label class="statusSwitch">
                                        <input type="checkbox" onclick='UpdateStatus(@item.CategoryId,@status)' checked>
                                        <span class="statusSlider round"></span>
                                    </label>
                                }
                                else
                                {
                                    var status = 0;
                                    <label class="statusSwitch">
                                        <input type="checkbox" onclick='UpdateStatus(@item.CategoryId,@status)'>
                                        <span class="statusSlider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                <a href="#">
                                    <a class="btn btn-secondary btn-sm" onclick='EditItemCategoryRecord(@item.CategoryId)'><span class="fas fa-edit"></span></a>
                                    <a class="btn btn-danger btn-sm" onclick='DeleteItemCategoryRecord(@item.CategoryId)'><span class="fas fa-trash"></span></a>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Paging" model="@searchBarAndPager" />
        </div>
    </div>
</div>

@*Create A Popup Modal for Add ItemCategory*@

<div class="modal fade" id="SaveModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="SaveModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="saveForm">
                    <fieldset id="SubmitForm">
                        @Html.HiddenFor(m => m.CategoryId, new { @id = "CategoryId" })
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">Category Name</div>
                                <div class="col-md-9">@Html.TextBoxFor(m => m.CategoryName, new { @id = "CategoryName", @class = "form-control" })</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">Description</div>
                                <div class="col-md-9">@Html.TextAreaFor(m => m.CategoryDescription, new { @id = "CategoryDescription", @class = "form-control" })</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">Image</div>
                                <div class="col-md-9">
                                    <label style="cursor: pointer;" placeholder="Select Image">
                                        <img id="saveImgPreview" height="140" width="140" />
                                        <input type="file" name="ItemCategoryImageFile" id="saveItemCategoryFile" style="display:none" onchange="readSaveImageURL(this);" />
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">Assigned Menu</div>
                                <div class="col-md-9">
                                    <table class="table table-striped" id="MenuListTable">
                                        <tbody id="MenuList">
                                            <tr id="MenuLoadingStatus" style="color:red"></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <a href="#" class="btn btn-block btn-danger" id="SaveItemCategory">Save</a>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

