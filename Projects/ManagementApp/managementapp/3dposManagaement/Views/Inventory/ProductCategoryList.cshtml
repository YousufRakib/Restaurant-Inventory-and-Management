@model _3dposManagaement.Utility.CommonModel.ProductCategoryMargeViewModel
@using CommonEntityModel.ModelClass;

@{
    ViewData["Title"] = "ProductCategory list page";
    SearchBarAndPager searchBarAndPager = new SearchBarAndPager();
    int pageNo = 0;
    var loggedInUserId = ViewBag.loggedInUserID;
    if (ViewBag.searchBar_Pager != null)
    {
        searchBarAndPager = ViewBag.searchBar_Pager;
        pageNo = searchBarAndPager.CurrentPage;
    }

    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h6>@ViewBag.Path</h6>
<br />

<div class="card mb-4">
    <div class="card-body">
        <h3>@ViewBag.Message</h3><br />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="table-responsive">
            <a href="#" class="btn btn-info" onclick="AddProductCategory(0)">Add ProductCategory</a> <br /><br />

            <partial name="_SearchBar" model="@searchBarAndPager" />

            <table class="table table-bordered" width="100%" cellspacing="0">
                <!-- id=dataTable -->
                <thead>
                    <tr>
                        <th>
                            ProductCategory ID
                        </th>
                        <th>
                            ProductCategory Name
                        </th>
                        <th>
                            Created By
                        </th>
                        <th>
                            Created Date
                        </th>
                        <th>
                            Updated By
                        </th>
                        <th>
                            Updated Date
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.productCategoryViewModel)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductCategoryId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedByName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedByName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedDate)
                            </td>
                            <td>
                                <a href="#">
                                    <a class="btn btn-secondary btn-sm" onclick='EditProductCategoryRecord(@item.ProductCategoryId)'><span class="fas fa-edit"></span></a>
                                    <a class="btn btn-danger btn-sm" onclick='DeleteProductCategoryRecord(@item.ProductCategoryId)'><span class="fas fa-trash"></span></a>
                                </a>
                            </td>
                        </tr>
                     }
                </tbody>
            </table>
            <partial name="_Paging" model="@searchBarAndPager" />
        </div>
    </div>
</div>

<div class="modal fade" id="SaveModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="SaveModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="saveForm">
                    <fieldset id="SubmitForm">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">ProductCategory Name</div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.ProductCategoryName, new { @id = "ProductCategoryName", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <a href="#" class="btn btn-block btn-danger" id="SaveProductCategoryRecord">Save</a>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="EditModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="EditModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <fieldset id="UpdatedSubmitForm">
                        @Html.HiddenFor(m => m.ProductCategoryId, new { @id = "EditProductCategoryId" })
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">ProductCategory Name</div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.ProductCategoryName, new { @id = "EditProductCategoryName", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <a href="#" class="btn btn-block btn-danger" id="UpdateProductCategoryRecord">Update</a>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Delete ProductCategory</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <input type="text" id="productCategoryId" hidden />
                <h4 style="text-align: center;">Do you want to delete this ?</h4>
                <br />
                <div>
                    <h6 style="font-weight: bold; text-align: center;"> Yes</h6>
                </div>
                <div>
                    <h6 style="text-align: center;">Verify Code</h6>
                </div>

                <input type="text" class="code-button" id="code1" style=" width: 18px; border-top: none; border-left: none; border-right: none;margin-left:41%" />
                <input type="text" class="code-button" id="code2" style=" width: 18px; border-top: none; border-left: none; border-right: none;" />
                <input type="text" class="code-button" id="code3" style=" width: 18px; border-top: none; border-left: none; border-right: none;" />
                <input type="text" class="code-button" id="code4" style=" width: 18px; border-top: none; border-left: none; border-right: none;" />
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Cancle</a>
                <a href="#" class="btn btn-danger" id="confirmButton" onclick="ConfirmDelete()" style="margin-right:32%">Confirm</a>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>

        $("#code1").keyup(function () {
            document.getElementById("code2").focus();
        });
        $("#code2").keyup(function () {
            document.getElementById("code3").focus();
        });
        $("#code3").keyup(function () {
            document.getElementById("code4").focus();
        });
        $("#code4").keyup(function () {
            document.getElementById("confirmButton").focus();
        });

        function AddProductCategory(productCategoryId) {
            $("#saveForm")[0].reset();
            $("#SaveModalTitle").html("Add ProductCategory");
            $("#SaveModal").modal();

        }

        function EditProductCategoryRecord(productCategoryId) {
            $("#editForm")[0].reset();
            $("#EditProductCategoryId").val(0);
            $("#EditModalTitle").html("Edit ProductCategory");

            $("#EditModal").modal();

            var url = "/Inventory/GetProductCategoryById?productCategoryId=" + productCategoryId;

            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    var obj = JSON.parse(data);
                    $("#EditProductCategoryId").val(obj.ProductCategoryId);
                    $("#EditProductCategoryName").val(obj.ProductCategoryName);
                }
            })
        }

        $("#SaveProductCategoryRecord").click(function () {
            var data = new FormData();

            var ProductCategoryName = $('#ProductCategoryName').val();

            var dataModel = {
                ProductCategoryName: ProductCategoryName
            }

            data.append('dataModel', JSON.stringify(dataModel));

            $.ajax({
                type: "Post",
                url: "/Inventory/SaveProductCategory",
                data: data,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Data Saved Successfully!");
                        window.location.href = "/Inventory/ProductCategoryList";
                        $("#SaveModal").modal("hide");
                    }
                    else if (data.output === "exist") {
                        alert("This ProductCategory already exist!");
                    }
                    else if (data.output === "error") {
                        alert("Exception");
                    }
                }
            })
        });

        $("#UpdateProductCategoryRecord").click(function () {
            var data = new FormData();

            var ProductCategoryId = $('#EditProductCategoryId').val();
            var ProductCategoryName = $('#EditProductCategoryName').val();

            var dataModel = {
                ProductCategoryId: ProductCategoryId,
                ProductCategoryName: ProductCategoryName
            }

            data.append('dataModel', JSON.stringify(dataModel));

            $.ajax({
                type: "Post",
                url: "/Inventory/EditProductCategory",
                data: data,
                //dataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Data Updated Successfully!");
                        window.location.href = "/Inventory/ProductCategoryList";
                        $("#EditModal").modal("hide");
                    }
                    else if (data.output === "exist") {
                        alert("This ProductCategory already exist!");
                    }
                    else if (data.output === "error") {
                        alert("Exception");
                    }
                }
            })
        });

        var DeleteProductCategoryRecord = function (productCategoryId) {
            $("#productCategoryId").val(productCategoryId);
            $("#DeleteConfirmation").modal("show");
        }

        var ConfirmDelete = function () {
            var code = $("#code1").val() + $("#code2").val() + $("#code3").val() + $("#code4").val();
            var productCategoryId = $("#productCategoryId").val();

            $.ajax({
                type: "POST",
                url: "/Inventory/DeleteProductCategory?productCategoryId=" + productCategoryId + "&code=" + code,
                success: function (data) {
                    if (data.output === "success") {
                        alert("Deleted!..");
                        window.location.href = "/Inventory/ProductCategoryList";
                        $("#DeleteConfirmation").modal("hide");
                        $(".row_" + unitTypeId).remove();
                    }
                    else if (data.output === "exist") {
                        alert("You can't delete this, because this ProductCategory already used in Product!..");
                        window.location.href = "/Inventory/ProductCategoryList";
                        $("#DeleteConfirmation").modal("hide");
                    }
                    else if (data.output === "insuccess") {
                        alert("Code not match");
                        window.location.href = "/Inventory/ProductCategoryList";
                        $("#DeleteConfirmation").modal("hide");
                    }
                    else if (data.output === "error") {
                        alert("Exception");
                        window.location.href = "/Inventory/ProductCategoryList";
                        $("#DeleteConfirmation").modal("hide");
                    }
                }
            })
        }

    </script>
}